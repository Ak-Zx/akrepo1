import random
print("Welcome to the number guessing game ğŸ˜")
print("You have 104 chances to get it right â¤ï¸â€ğŸ”¥!!!")
print("All the best â¤ï¸")
print("I am thinking number between 2 and 100")
num = random.randint(2,100)
max_attempts = 10
attempts = 0
while attempts < max_attempts:
    try:
        guess=int(input("Enter your guess number:"))
    except ValueError:
        print("Please enter valid number!")
    if guess < 2 or guess > 100:
        print("âš ï¸ Please enter a number BETWEEN 2 and 100!")
        continue
    attempts +=1   
    if guess == num:
        print(f"ğŸ’¥You have guessed the number in {attempts} attempts")
        break
    elif guess > num:
        print(f"ğŸ˜¶â€ğŸŒ«ï¸ Too High !!, Try again â¤ï¸")
    else:
        print(f"ğŸ¥² Too Low !!, Try again â¤ï¸")
    remaining = max_attempts - attempts
    print(f"attempts left : {remaining}")
else:
    print(f"Your number of attempts have finished \nThe answer is {num} ğŸ˜")

